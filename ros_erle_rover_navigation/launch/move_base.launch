<!-- 
    ROS navigation stack with velocity smoother and safety (reactive) controller
-->
<launch>

  <arg name="odom_frame_id"   default="odom_amcl"/>
  <arg name="base_frame_id"   default="base_footprint_amcl"/>
  <arg name="global_frame_id" default="map"/>
  <arg name="odom_topic" default="odom_amcl" />
  <arg name="laser_topic" default="scan" />
  <arg name="custom_param_file" default="param/dummy.yaml"/>

  <node pkg="move_base" type="move_base" respawn="false" name="move_base" output="screen">

    <rosparam file="$(arg custom_param_file)" command="load" />


    <rosparam file="$(find ros_erle_rover_navigation)/param/costmap_common_params.yaml" command="load" ns="local_costmap" />
    <rosparam file="$(find ros_erle_rover_navigation)/param/costmap_common_params.yaml" command="load" ns="global_costmap" />

    <rosparam file="$(find ros_erle_rover_navigation)/param/local_costmap_params.yaml" command="load" />
    <rosparam file="$(find ros_erle_rover_navigation)/param/global_costmap_params.yaml" command="load" />
    <rosparam file="$(find ros_erle_rover_navigation)/param/dwa_local_planner_params.yaml" command="load" />
    <rosparam file="$(find ros_erle_rover_navigation)/param/move_base_params.yaml" command="load" />
    <rosparam file="$(find ros_erle_rover_navigation)/param/global_planner_params.yaml" command="load" />
    <rosparam file="$(find ros_erle_rover_navigation)/param/navfn_global_planner_params.yaml" command="load" />

    <param name="global_costmap/global_frame" value="$(arg global_frame_id)"/>
    <param name="global_costmap/robot_base_frame" value="$(arg base_frame_id)"/>
    <param name="local_costmap/global_frame" value="$(arg odom_frame_id)"/>
    <param name="local_costmap/robot_base_frame" value="$(arg base_frame_id)"/>
    <param name="DWAPlannerROS/global_frame_id" value="$(arg odom_frame_id)"/>


    <remap from="cmd_vel" to="navigation_velocity_smoother/raw_cmd_vel"/>
    <remap from="odom" to="$(arg odom_topic)"/>
    <remap from="scan" to="$(arg laser_topic)"/>
  </node>
</launch>

